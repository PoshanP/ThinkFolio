# =============================================================================
# API TOKENS CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual API keys
# NEVER commit .env.local to version control!

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# AI PROVIDERS
# =============================================================================

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_ORG_ID=org-your-organization-id  # Optional

# Anthropic Claude Configuration
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_VERSION=2023-06-01  # API version

# AI Provider Selection (openai or anthropic)
AI_PROVIDER=openai

# =============================================================================
# GOOGLE CLOUD PLATFORM
# =============================================================================
# Get credentials from: https://console.cloud.google.com/apis/credentials

# Google Cloud Project Configuration
GCP_PROJECT_ID=your-project-id
GCP_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GCP_PRIVATE_KEY=your-private-key-here
# Or use service account key file path:
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Google Cloud Storage
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id

# Google Cloud Vision API
GCP_VISION_API_KEY=your-vision-api-key

# Google Cloud Document AI
GCP_DOCUMENT_AI_PROCESSOR_ID=your-processor-id
GCP_DOCUMENT_AI_LOCATION=us  # or eu, asia

# =============================================================================
# AWS SERVICES
# =============================================================================
# Get credentials from: https://console.aws.amazon.com/iam/home#/security_credentials

# AWS Credentials
AWS_ACCESS_KEY_ID=AKIA...your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_SESSION_TOKEN=optional-session-token  # For temporary credentials

# AWS S3 Configuration
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=optional-s3-specific-key  # If different from main AWS key
AWS_S3_SECRET_ACCESS_KEY=optional-s3-specific-secret

# AWS Lambda Configuration
AWS_LAMBDA_FUNCTION_NAME=your-function-name
AWS_LAMBDA_ROLE_ARN=arn:aws:iam::account-id:role/your-lambda-role

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# PayPal Configuration (if needed)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # or 'live'

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# SendGrid Configuration
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your App Name

# Resend Configuration (alternative to SendGrid)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-api-key

# AWS SES Configuration (alternative)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-ses-access-key
AWS_SES_SECRET_ACCESS_KEY=your-ses-secret-key
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Mixpanel Configuration
# Get token from: https://mixpanel.com/settings/project
MIXPANEL_TOKEN=your-mixpanel-token
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Segment Configuration
# Get write key from: https://app.segment.com/settings/keys
SEGMENT_WRITE_KEY=your-segment-write-key
NEXT_PUBLIC_SEGMENT_WRITE_KEY=your-segment-write-key

# PostHog Configuration
# Get API key from: https://app.posthog.com/project/settings
POSTHOG_API_KEY=phc_your-posthog-api-key
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-api-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
# Get DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Twilio (SMS/Voice)
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACyour-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Integration
# Get tokens from: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# Discord Integration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# =============================================================================
# STORAGE & CDN
# =============================================================================

# Cloudflare
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=vercel-blob-token

# Uploadthing
UPLOADTHING_SECRET=sk_live_your-uploadthing-secret
UPLOADTHING_APP_ID=your-uploadthing-app-id

# =============================================================================
# SEARCH & INDEXING
# =============================================================================

# Algolia
# Get credentials from: https://www.algolia.com/account/api-keys
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_ADMIN_API_KEY=your-algolia-admin-key
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your-algolia-search-key
ALGOLIA_INDEX_NAME=your-index-name

# Meilisearch
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_MASTER_KEY=your-meilisearch-master-key

# =============================================================================
# VECTOR DATABASES
# =============================================================================

# Pinecone
# Get API key from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX_NAME=your-index-name

# Weaviate
WEAVIATE_URL=https://your-cluster.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

# Chroma
CHROMA_URL=http://localhost:8000
CHROMA_API_KEY=your-chroma-api-key  # If authentication is enabled

# =============================================================================
# AUTHENTICATION & AUTHORIZATION
# =============================================================================

# Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://your-api-audience

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# OTHER SERVICES
# =============================================================================

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=your-redis-token  # For Upstash Redis

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# PostgreSQL (if not using Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Rate Limiting (Upstash)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development  # development, production, or test
NEXT_PUBLIC_APP_URL=http://localhost:3000
